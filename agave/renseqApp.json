{
  "name"          : "renseq",
  "label"         : "Renseq PacBio Pipeline",
  "version"       : "0.1.4",
  "executionType" : "CLI",

  "executionSystem"  : "cyverseUK-Batch2",
  "deploymentSystem" : "cyverseUK-Storage2",
  "deploymentPath"  : "renseq/agave",
  "templatePath"    : "wrapper.sh",
  "testPath"        : "test.sh",
  "parallelism"     : "SERIAL",
  "shortDescription" : "Test for renseq pipeline",
  "longDescription"  : "Test for renseq pipeline",
  "helpURI" : "http://www.cyverseuk.org/applications/renseq",
  "datePublished": "23rd Aug 2016",
  "author" : "Erik van den Bergh / Pirita Paajanen",
  "tags": [ "testing"],
  "ontology": [ ],

  "inputs" : [ {
      "id": "h5",
      "details" : {
        "label": "PacBio h5 files",
        "description": "h5 Files that will be assembled"
      },
      "value": { 
        "required" : "true",
        "default" : "agave://data.iplantcollaborative.org/home/erikvdbergh/testdata/test.h5",
        "visible":true
      },
      "semantics": {
        "minCardinality": 1,
	"maxCardinality": -1
      } 
    },
    {
      "id": "adapters",
      "details" : {
        "label": "Adapters" ,
        "description": "FASTA file containing adapters to filter"
      },
      "value": {
        "required" : "true",
        "default" : "agave://data.iplantcollaborative.org/home/erikvdbergh/testdata/americanum_adapter.fasta",
        "visible":true
      },
      "semantics": {
        "maxCardinality": 1
      }
    }
  ],
  "parameters" : [
    {
      "id": "genomesize",
      "details" : {
        "label": "Genome size" ,
        "description": "Estimation of the sequenced genome size"
      },
      "value": {
        "required" : "true",
        "type": "number",
        "default": 7000000,
        "visible":"true"
      }
    },
    {
      "id": "minSubReadLength",
      "details" : {
        "label": "Minimal sub read length",
        "description": "Filter reads for use in the pre-assembly step of HGAP"
      },
      "value": {
        "required" : "false",
        "type":"number",
        "default": 500,
        "visible":"true"
      }
    },
    {
      "id": "minLength",
      "details" : {
        "label": "Minimal length",
        "description": ""
      },
      "value": {
        "required" : "false",
        "type":"number",
        "default": 100,
        "visible":"true"
      }
    },
    {
      "id": "readScore",
      "details" : {
        "label": "Read score",
        "description": ""
      },
      "value": {
        "required" : "false",
        "type":"number",
        "default": 0.80,
        "visible":"true"
      }
    },
    {
      "id": "minLongReadLength",
      "details" : {
        "label": "Minimum long read length",
        "description": ""
      },
      "value": {
        "required" : "false",
        "type":"number",
        "default": 1000,
        "visible":"true"
      }
    },
    {
      "id": "ovlErrorRate",
      "details" : {
        "label": "OVL error rate",
        "description": ""
      },
      "value": {
        "required" : "false",
        "type":"number",
        "default": 0.06,
        "visible":"true"
      }
    },
    {
      "id": "xCoverage",
      "details" : {
        "label": "Fold (x) coverage",
        "description": ""
      },
      "value": {
        "required" : "false",
        "type":"number",
        "default": 25,
        "visible":"true"
      }
    }
  ]
}
